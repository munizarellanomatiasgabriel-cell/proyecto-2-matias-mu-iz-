// Elementos HTML
constquestionTextElement = document.getElementById('question-text');
constnextQuestionBtn = document.getElementById('next-question-btn');
constquestionBox = document.getElementById("question-box");
constparticleContainer = document.querySelector(".particle-container");

// Evento para el botón
nextQuestionBtn.addEventListener('click', () => {
    constrandomIndex = Math.floor(Math.random() * questions.length);
    constrandomQuestion = questions[randomIndex];

    constcolors = ["border-neon-pink', 'border-neon-blue', 'border-neon-green', 'border-neon-yellow', 'border-neon-purple"];
    constrandomColor = colors[Math.floor(Math.random() * colors.length)];
    
    colors.forEach(c => questionBox.classList.remove(c));
    questionBox.classList.add(randomColor);

    questionTextElement.classList.remove('animate-pop-in');
    void questionTextElement.offsetWidth;
    questionTextElement.classList.add('animate-pop-in');

    questionTextElement.textContent = randomQuestion;

    questionBox.classList.add('animate-pulse');
    setTimeout(() => questionBox.classList.remove('animate-pulse'), 500);
});

// --- Animación de partículas ---
const particleColors = ['#ff69b4', '#4dc2ff', '#51ff00', '#ffea00', '#9d00ff'];

function createParticle() {
    const particle = document.createElement('div');
    particle.className = 'particle';

    const size = Math.random() * 8 + 4;
    particle.style.width = `${size}px`;
    particle.style.height = `${size}px`;

    const left = Math.random() * 100;
    particle.style.left = `${left}vw`;

    const duration = Math.random() * 5 + 5;
    particle.style.animationDuration = `${duration}s`;

    const delay = Math.random() * 2;
    particle.style.animationDelay = `${delay}s`;

    const color = particleColors[Math.floor(Math.random() * particleColors.length)];
    particle.style.backgroundColor = color;

    particleContainer.appendChild(particle);

    setTimeout(() => particle.remove(), duration * 1000);
}

setInterval(createParticle, 300);
